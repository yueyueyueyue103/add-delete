<!DOCTYPE html>
<html lang="ja">
<head>
</head>
<body>
    <form id="myForm">
        <label for="field1">テキストを入力してください (1)：</label>
        <input type="text" id="field1" name="field1">
        <span id="error1" class="error"></span>
        <br><br>

        <label for="field2">テキストを入力してください (2)：</label>
        <input type="text" id="field2" name="field2">
        <span id="error2" class="error"></span>
        <br><br>

        <label for="field3">テキストを入力してください (3)：</label>
        <input type="text" id="field3" name="field3">
        <span id="error3" class="error"></span>
    </form>
</body>
</html>





$(document).ready(function() {
    // 错误信息文本
    var errorMessage = "半角カナは使用できません。";

    // 检查并显示/隐藏错误信息的函数
    function validateField(fieldId, errorId) {
        var value = $(fieldId).val();
        var containsHankakuKana = /[\uFF65-\uFF9F]/.test(value);
        
        if (containsHankakuKana) {
            $(errorId).text(errorMessage).show();
        } else {
            $(errorId).hide();
        }
    }

    // 监听三个文本框的输入事件
    $("#field1").on("input", function() {
        validateField("#field1", "#error1");
    });

    $("#field2").on("input", function() {
        validateField("#field2", "#error2");
    });

    $("#field3").on("input", function() {
        validateField("#field3", "#error3");
    });
});
